<!DOCTYPE html>
<html>
<head>
  <title>Etsydemo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- this display the header partial -->
<%= render 'layouts/header' %>

<div class="container">

	<!-- the notice/alert classes enable us to send messages to out users -->
	<!-- <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
 -->

 	<% flash.each do |name, msg| %>
 		<% if msg.is_a?(String) %>
 			<div class="alert alert-<%= name == :notice ? "success" : "danger" %> alert-dismissable">
 				<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
 				<%= content_tag :div, msg, :id => "flash_#{name}" %>
 			</div>
 		<% end %>
 	<% end %>


	<%= yield %>

	<!-- this display the footer partial -->
	<%= render 'layouts/footer' %>
</div>
</body>
</html>
